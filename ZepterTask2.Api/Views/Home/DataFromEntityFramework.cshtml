@model IEnumerable<ZepterTask.Models.DTOs.PaymentSumaryDTO>

@{
    ViewData["Title"] = "Data from Entity Framework";
}

<h1>Data from Entity Framework</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Payment Method</th>
            <th>Order Count</th>
            <th>Total Gross Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var summary in Model)
        {
            <tr>
                <td>@summary.PaymentMethod</td>
                <td>@summary.OrdersCount</td>
                <td>@summary.TotalGrossPrice</td>
            </tr>
        }
        
    </tbody>
</table>
